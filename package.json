{
  "name": "president",
  "version": "1.0.0",
  "description": "Multiplayer President card game with real-time gameplay",
  "scripts": {
    "dev": "pnpm run dev:frontend",
    "dev:frontend": "cd frontend && pnpm run dev",
    "dev:local": "node scripts/dev-local.js",
    "dev:workers": "wrangler dev --local --config wrangler.api.toml",
    "dev:api": "wrangler dev --local --config wrangler.api.toml",
    "dev:realtime": "wrangler dev --local --config wrangler.realtime.toml",
    "dev:cloudflare": "pnpm run dev:frontend",
    "build": "pnpm run build:frontend && pnpm run build:workers",
    "build:frontend": "cd frontend && pnpm run build",
    "build:workers": "wrangler deploy --config wrangler.api.toml --dry-run && wrangler deploy --config wrangler.realtime.toml --dry-run",
    "deploy:api": "wrangler deploy --config wrangler.api.toml",
    "deploy:realtime": "wrangler deploy --config wrangler.realtime.toml",
    "deploy": "pnpm run deploy:api && pnpm run deploy:realtime",
    "db:migrate": "wrangler d1 migrations apply president-db",
    "db:migrate:local": "wrangler d1 execute president-db --local --file=./migrations/0001_initial_schema.sql",
    "clean:local": "echo 'Local dev uses in-memory database - no cleanup needed'",
    "lint": "eslint ."
  },
  "keywords": ["president", "card-game", "multiplayer", "cloudflare", "scum"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240208.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.2",
    "wrangler": "^3.26.3"
  },
  "optionalDependencies": {
    "ws": "^8.16.0"
  }
}
